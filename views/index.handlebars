{{#unless findingStatus}}
<div class="container mt-4">
  <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">
    <i class="fas fa-exclamation-triangle fa-lg"></i>
    <strong>帳號或密碼錯誤！</strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
</div>
{{/unless}}
<form action="/" method="POST">
  <div class="mb-3">
    <label for="account-input" class="form-label">Account</label>
    <input type="text" class="form-control" id="account-input" name="accountInput">
  </div>
  <div class="mb-3">
    <label for="password-input" class="form-label">Password</label>
    <input type="password" class="form-control" id="password-input" name="passwordInput">
  </div>
  <div class="d-flex flex-column align-items-center">
    <button type="submit" class="btn btn-primary">Sign in</button>
  </div>
</form>
